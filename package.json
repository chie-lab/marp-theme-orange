{
  "name": "marp-theme-orange",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "sass themes:dist/themes --style=compressed --no-source-map",
    "build:watch": "pnpm build --watch",
    "stylelint": "stylelint 'themes/**/*.scss'",
    "stylelint:fix": "pnpm stylelint --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "marp:watch": "pnpm build && marp --theme-set ./dist/themes --watch  -I ./slides --output ./dist",
    "generate:ogp": "pnpm build && marp --theme-set ./dist/themes --image png --allow-local-files -I ./slides --output ./dist",
    "generate:html": "pnpm build && pnpm generate:ogp && marp --theme-set ./dist/themes --html -I ./slides --output ./dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "prettier": "^3.7.4",
    "sass": "^1.96.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-prettier": "^5.0.3"
  }
}
